@model Expense

<h3>Model.Budget Information</h3>

<table class="table">
    <tr>
        <th>Amount</th>
        <th>Payee</th>
        <th>Budget</th>
        <th>Month</th>
        <th>Day</th>
        <th>Year</th>
    </tr>
    <tr>
        <td>@Model.Amount</td>
        <td>@Model.Payee    </td>
        <td>@Model.Budget</td>
        <td>@Model.Month</td>
        <td>@Model.Day</td>
        <td>@Model.Year</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Expense/UpdateExpense/@Model.Number">Update this Expense</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteExpense", "Expense", "Post"))
    {
        <input type="hidden" asp-for="Number" value="@Model.Number" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>
