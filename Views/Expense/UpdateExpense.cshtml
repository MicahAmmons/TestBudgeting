@using TestBudgeting.Models.Home;
@model HomeVar

<head>
    <link rel="stylesheet" href="/css/site.css">
    <style>
        body {
            background-color: #3E1B24;
            text-align: center;
        }
    </style>
</head>


<h1 style="text-align: center; color: #FFD5A7; font-weight: bold; font-size: 40px; margin-bottom: 20px; background-color: #3E1B24;" >Update Expense</h1>

@using (Html.BeginForm("UpdateExpenseToDatabase", "Expense", "Post"))
{
    <input asp-for="Expense.Number" type="hidden" value="@Model.Expense.Number" />


    <div class="form-group">
        <label asp-for="Budget" class="control-label">Budget</label>
        <select class="form-control" name="Budget">
            @foreach (var bud in Model.Expense.Distinct)
            {
                <option value="@bud">@bud</option>
            }
        </select>
    </div>
        <div class="form-group">
    <label asp-for="Expense.Payee" class="control-label">Payee</label>
    <input type="text" name="Payee" class="form-control" value="@Model.Expense.Payee" />
    </div>
        <div class="form-group">
    <label asp-for="Expense.Amount" class="control-label">Amount</label>
    <input type="number" name="Expense.Amount" class="form-control" value="@Model.Expense.Amount" />
    </div>
            <div class="form-group">
    <label asp-for="Expense.Month" class="control-label">Month</label>
    <input type="number" name="Month" class="form-control" value="@Model.Expense.Month" />
    </div>
                <div class="form-group">
    <label asp-for="Expense.Day" class="control-label">Day</label>
    <input type="number" name="Day" class="form-control" value="@Model.Expense.Day" />
    </div>
                    <div class="form-group">
    <label asp-for="Expense.Year" class="control-label">Year</label>
    <input type="number" name="Year" class="form-control" value="@Model.Expense.Year" />
    </div>

    <input type="submit" value="Update Expense" class="hyperlink-top" />
}