@using TestBudgeting.Models.Expense;
@model Expense


<style>
    a { /*Text color of hyperlinks*/
        color: #3E1B24;
        padding: 1px 10px;
        font-weight: bold;
        text-decoration: none;
        font-size: 30px;
    }

        a:hover {
            background-color: #FFD5A7;
                }
    body{
        background-color: #3E1B24;
        text-align:center;
    }

    form {
        background-color: #3E1B24;
        padding: 20px;
        width: 33%;
        margin: 0 auto;
    }

    label {
        color: #FFD5A7;
        font-weight: bold;
        font-size: 30px;
    }

    input[type="text"],
    input[type="number"] {
        background-color: #FFD5A7;
        color: #3E1B24;
        font-weight: bold;
        font-size: 20px;
        width: 100%;
        padding: 5px;
    }

    input[type="submit"] {
        background-color: #3E1B24;
        color: #FFD5A7;
        font-weight: bold;
        font-size: 20px;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }

    select {
        background-color: #FFD5A7;
        color: #3E1B24;
        font-weight: bold;
        font-size: 20px;
        width: 100%;
        padding: 5px;
        border: none;
    }

        select option {
            background-color: #FFD5A7;
            color: #3E1B24;
            font-weight: bold;
            font-size: 20px;
        }

    input[type="text"]:focus,
    input[type="number"]:focus {
        background-color: #FFD5A7;
        color: #3E1B24;
        font-weight: bold;
        font-size: 20px;
        width: 100%;
        padding: 5px;
        outline: none;
    }

</style>


<h1 style="text-align: center; color: #FFD5A7; font-weight: bold; font-size: 40px; margin-bottom: 20px; background-color: #3E1B24;">Create a New Expense</h1>


@using (Html.BeginForm("InsertExpenseToDatabase", "Expense", "Post"))
{
    <input asp-for="Number" type="hidden"/>

    <div class="form-group">
        <div style=" color: #FFD5A7; font-weight: bold; font-size: 30px; margin-bottom: 10px; background-color: #3E1B24;">Budget</div>

        <select class="form-control" name="Budget">
            @foreach (var bud in Model.Distinct)
            {
                <option value="@bud">@bud</option>
            }
        </select>
    </div>


    <div class="form-group">
        <label asp-for="Payee" class="control-label">Payee</label>
        <input type="text" style="text-align: center" name="Payee" class="form-control" value="@Model.Payee" />
    </div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label">Amount</label>
        <input type="number" style="text-align: center" step="0.01" name="Amount" class="form-control" value="@Model.Amount" />
    </div>

    <div class="form-group">
        <label asp-for="Month" class="control-label">Month</label>
        <input type="number" style="text-align: center" name="Month" class="form-control" value="@Model.Month" />
    </div>
    <div class="form-group">
        <label asp-for="Day" class="control-label">Day</label>
        <input type="number" style="text-align: center" name="Day" class="form-control" value="@Model.Day" />
    </div>

    <div class="form-group">
        <label asp-for="Year" class="control-label">Year</label>
        <input type="number" style="text-align: center" name="Year" class="form-control" value="@Model.Year" />
    </div>

    <input type="submit" value="Create Expense" class="btn btn-primary" />
}
<div asp-validation-summary="All" class="text-danger"></div>
