@using TestBudgeting.Models.NTSE
@model NTSEExpanded

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align items closer to the top */
            background-color: black; /* Optional background color */
            color: white; /* Set text color to white */
            padding-top: 20px; /* Adjust top padding for additional space */
        }

        table {
            color: white; /* Set text color to white */
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #333;
            color: white;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
        /* Form styles */
        /* Form styles */
        form {
            display: flex;
            flex-direction: row; /* Display elements in a row */
            justify-content: center; /* Center the elements horizontally */
            align-items: center; /* Align the elements vertically */
            flex-wrap: wrap; /* Allow elements to wrap to the next row if needed */
            width: 100%;
            background-color: #333;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }

            form label {
                color: white;
                margin-right: 10px; /* Add space between labels and inputs */
                flex: 0 0 100px; /* Set a fixed width for labels */
            }

            form select, form input[type="text"], form input[type="number"] {
                flex: 1; /* Allow inputs to take up remaining space */
                padding: 8px;
                margin-bottom: 12px;
                border: 1px solid #ddd;
                border-radius: 4px;
                background-color: #555;
                color: white;
                margin-right: 10px; /* Add space between inputs */
            }

            form button {
                padding: 10px 20px;
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                flex: 0 0 auto; /* Reset flex value for button */
            }

                form button:hover {
                    background-color: #45a049;
                }


    </style>
</head>
<body>

    <row>
            @using (Html.BeginForm("InsertItem", "NTSE", FormMethod.Post))
            {
                <div>
                    <label>Category</label>
                    <select asp-for="NTSE.Category" id="itemType" name="Category" value="">
                        <option value="T-Shirt">T-Shirt</option>
                        <option value="Sweatshirt">Sweatshirt</option>
                        <option value="Hoodie">Hoodie</option>
                        <option value="Dry Fit">Dry Fit</option>
                    </select>

                    <label>Style Number</label>
                    <input type="number" asp-for="NTSE.StyleNumber" class="form-control" />

                <label>Size</label>
                <input type="text" asp-for="NTSE.Size" class="form-control" />

                <label>Color</label>
                <input type="text" asp-for="NTSE.Color" class="form-control" />

                <label>Quantity</label>
                <input type="nuber" asp-for="NTSE.Quantity" class="form-control" />

                    <input type="submit" value="Add" class="hyperlink-top" />
                </div>
            }
    </row>
    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>StyleNumber</th>
                <th>Size</th>
                <th>Color</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListOfNTSE)
            {
                <tr>
                    <td style="display:none">@item.ID</td>
                    <td>@item.Category</td>
                    <td>@item.StyleNumber</td>
                    <td>@item.Size</td>
                    <td>@item.Color</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
