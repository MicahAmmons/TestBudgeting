﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Micah's Budgeting App'</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css">


</head>
<body>
    <header>

        <nav class="right-navbar custom-bg-color">
            <!-- Navbar content -->
       

            <div class="container">
             
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div  class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul  class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="HomePage" class="hyper-link ">Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Expense" asp-action="Index" class="hyper-link ">Expenses</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Budget" asp-action="ViewBudgets" class="hyper-link ">Budgets</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Gmail" asp-action="GmailPage" class="hyper-link ">Gmail</a>
                        </li>

                        <!--mx-5 and mx 1 to shift the bar left and right-->

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted">
        <div class="container">
           
           <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>