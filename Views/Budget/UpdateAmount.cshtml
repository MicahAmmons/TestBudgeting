@model Budget

<h2>Update </h2>

@using (Html.BeginForm("UpdateBudgetAmountToDatabase", "Budget", "Post"))
{
        <input asp-for="DistinctBudgets" type="hidden" value="@Model.DistinctBudgets" />
    
        <label asp-for="BudgetAmount" class="control-label">Set Amount</label>
        <input type="number" name="BudgetAmount" class="form-control" value="@Model.BudgetAmount" />


    <input type="submit" value="Update Budget" class="btn btn-primary" />
}

@using (Html.BeginForm("DeleteBudget", "Budget", "Post"))
{
    <input type="hidden" asp-for="DistinctBudgets" value="@Model.DistinctBudgets" />
    <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
}