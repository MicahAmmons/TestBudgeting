@using TestBudgeting.Models.Home.Budget
@model BudgetV

<head>
    <link rel="stylesheet" href="/css/site.css">
</head>
<style>
    body {
        background-color: #3E1B24;
        text-align: center;
    }
</style>

<h2 style="color: #FFD5A7; font-weight: bold; font-size: 50px;">Create a New Budget</h2>


@using (Html.BeginForm("InsertBudgetToDatabase", "Budget", "Post"))
{

    <div class="form-group">
        <label asp-for="DistinctBudgets" class="control-label">New Budget</label>
        <input type="text" style="text-align: center" name="DistinctBudgets" class="form-control" value="@Model.DistinctBudgets" />
    </div>

    <div class="form-group">
        <label asp-for="BudgetAmount" class="control-label">Set Amount</label>
        <input type="number" style="text-align: center" name="BudgetAmount" class="form-control" value="@Model.BudgetAmount" />
    </div>

    <div class="form-group">
        <label asp-for="Month" class="control-label">Set Month</label>
        <input type="number" style="text-align: center" name="Month" class="form-control" value="@Model.Month" />
    </div>

    <input type="submit" value="Create Budget" class="hyperlink-top" />
}
